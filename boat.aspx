                		break;
                	default:
                		break;
                }
                
                $('#txtNoa').change(function(e) {
                    $(this).val($.trim($(this).val()).toUpperCase());
                    if ($(this).val().length > 0) {
                        t_where = "where=^^ noa='" + $(this).val() + "'^^";
                        q_gt('boat', t_where, 0, 0, 0, "checkBoatno_change", r_accy);
